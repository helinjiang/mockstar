{
  "name": "mockstar",
  "private": true,
  "scripts": {
    "init": "rm -rf node_modules && npm install && npm run clean && npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean --yes",
    "build": "lerna run build",
    "publish": "git pull && lerna publish --cd-version patch",
    "force-publish": "lerna publish --cd-version patch --force-publish=*",
    "check-changed": " lerna changed",
    "precommit": "lint-staged",
    "commitmsg": "validate-commit-msg",
    "commit": "git-cz",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "npm run docs:build && gh-pages -d docs-dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mockstarjs/mockstar.git"
  },
  "keywords": [
    "mock",
    "service"
  ],
  "author": "helinjiang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mockstarjs/mockstar/issues"
  },
  "homepage": "https://github.com/mockstarjs/mockstar#readme",
  "lint-staged": {
    "src/*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "commitizen": "^3.0.2",
    "element-ui": "^2.13.2",
    "eslint": "^7.3.1",
    "gh-pages": "^3.1.0",
    "husky": "^1.1.2",
    "lerna": "^3.4.3",
    "less": "^3.11.3",
    "less-loader": "^6.2.0",
    "lint-staged": "^7.3.0",
    "prettier": "^2.0.5",
    "typescript": "^3.9.6",
    "validate-commit-msg": "^2.14.0",
    "vue-particles": "^1.0.9",
    "vuepress": "^1.5.2"
  }
}
